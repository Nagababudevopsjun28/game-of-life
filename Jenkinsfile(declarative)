pipeline {
    agent { label 'MAVEN_JDK8' }
    stages {
        stage('vcs') {
            steps {
                git url: 'https://github.com/Nagababudevopsjun28/game-of-life.git',
                    branch: 'declarative'
            }
        }
        stage('package') {
            steps {
                sh 'mvn package'
            }
        }
        stage('post build') {
            steps {
                 archiveArtifacts artifacts:'**/target/*.jar
                                  onlyIfSuccessful: true
                 junit:'**/surefire-reports/TEST-/*.xml'

    
            
            }
        }
    }
}
    
